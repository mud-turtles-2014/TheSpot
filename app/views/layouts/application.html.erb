<!DOCTYPE html>
<html>
<head>
  <title>TheSpot</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <%= link_to "NYC Brunch", spots_path, class: 'logo'%>
    <ul class="nav">
      <li class="search">
        <%= form_tag("/search", method: "get") do %>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Search") %>
        <% end %>
      </li>

      <% if session[:user_id] %>
        <li><%= link_to "new spot", new_spot_path %></li>
        <li><%= link_to "logout", '/logout', method: :delete %></li>
      <% else %>
        <li><%= link_to "login", '/login' %></li>
      <% end %>
    </ul>
  </nav>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
